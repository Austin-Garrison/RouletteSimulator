<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="480.0" minWidth="640.0" prefHeight="480.0" prefWidth="640.0" stylesheets="@css/game.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.miracosta.cs210.roulettesimulator.GameController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu text="Game">
                <MenuItem onAction="#onCloseMenuClick" text="Exit" />
            </Menu>
            <Menu text="Player">
                <MenuItem onAction="#onStatsMenuClick" text="Stats" />
            <MenuItem text="Logout" />
            </Menu>
            <Menu text="Help">
                <MenuItem text="About" />
            </Menu>
        </MenuBar>
    </top>
   <bottom>
      <HBox style="-fx-background-color: #41413f;" BorderPane.alignment="CENTER">
         <children>
            <Label text="CASH" textFill="YELLOW">
               <font>
                  <Font name="Courier New" size="18.0" />
               </font>
            </Label>
            <Label fx:id="cashValue" text="\$1,528.87" textFill="WHITE">
               <font>
                  <Font name="Courier New" size="16.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
             <ImageView fitHeight="300.0" pickOnBounds="true" preserveRatio="true">
                 <Image backgroundLoading="true" url="@board.png" />
               <viewport>
                  <Rectangle2D />
               </viewport>
             </ImageView>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button id="gameButton" fx:id="betButton" onAction="#onBetClick" text="Bet" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Courier New Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding></Button>
                  <Button id="gameButton" fx:id="cashOutButton" onAction="#onCashOutClick" text="Cash Out" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding></Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
